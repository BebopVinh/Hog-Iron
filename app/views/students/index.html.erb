<%= render 'layout' %>



<div class="col-sm-12 d-flex flex-row">

  <div class="container">
    <div class="panel-a" text-black>
      <div class="panel-body">

      <div class="container-fluid row">
        <div class="text-center">
        <h1>Our Students</h1>
        <% @houses.sort_by(&:name).each do |house| %>
          <br><br>
          <h1><%= link_to house.name, house_path(house) %></h1>
          <% house.students.sort_by(&:name).each do |student| %>
            <h4><%= link_to student.name, student_path(student)%></h4>
          <% end %>
        <% end %>
        <br><br>
      <div>
    </div>
  </div>
</div>
