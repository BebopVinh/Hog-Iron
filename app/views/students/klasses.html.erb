<%= render 'layout' %>
<div class="subheader"><h2><%= @student.name %>'s Class Schedule </h2></div>
<h3>Add or drop classes here</h3>
<br>
<h4>Warning: Time Turners are longer be available; don't sign up for too many classes!</h4>
<br>
<%= form_for @student do |f| %>
  <h2><%= f.label :klass_ids, "Classes" %></h2>
  <h4><%= f.collection_check_boxes :klass_ids, Klass.all.sort_by(&:name), :id, :name %><h4><br>
  <%= f.submit "Update Class Schedule"%>
<% end %>
