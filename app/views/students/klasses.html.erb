<style media="screen">

</style>
<%= render '/klasses/layout' %>
<br><br><br><br><br><br>

<div class="container">
  <div class="panel-a">
    <div class="panel-body">
      <div class="subheader"><h6 style="text-align:center"><%= @student.name %>'s Class Schedule </h6></div>
      <div class="col-sm-12 d-flex flex-row">
        <div class="center" style="text-align:center">

        <br>
        <h3 style="color:tan"><em>Warning: Time Turners are no longer available; don't sign up for too many classes!</em></h3>
        <br><br><br>
        <%= form_for @student do |f| %>
          <h2><%= f.label :klass_ids, "Add or Drop Classes" %></h2>
          <h5>
            <%= f.collection_check_boxes :klass_ids, Klass.all.sort_by(&:name), :id, :name %><h5><br>
            <div style="color:black">
            <%= f.submit "Update Class Schedule" %>
            </div>
          </h5>
        <% end %>
      </div>
    </div>
  </div>
</div>
