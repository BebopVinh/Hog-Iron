<% if flash[:alert] %>
  <div class="alert" style="color:red">
    <ul>
     <% flash[:alert].each do |alert| %>
      <li><%= alert %></li>
     <% end %>
    </ul>
   </div>
 <% end %>

 <p style>Which house you wonder? After you're enrolled, the Sorting Hat will assign you!</p>

<%= form_for student do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :heritage %>
  <%= f.select :heritage, Student.heritages, include_blank: true %>
  <br><br>
  <%= f.label :patronus, "Patronus, if known" %>
  <%= f.text_field :patronus %>
  <br><br>
  <%= f.label :graduation_year, "Class of" %>
  <%= f.text_field :graduation_year %>
  <br><br>
  <%= f.label :status, "Alive at End of Book Series?" %>
  <%= f.check_box :status %>
  <br><br>
  <%= f.label :bio %>
  <%= f.text_area :bio %>
  <br><br>


  <br><br>
  <%= f.submit %>
<% end %>
