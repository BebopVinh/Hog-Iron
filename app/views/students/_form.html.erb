<%= render 'layout' %>



<div class="container">
  <div class="panel-a" text-black>
    <div class="panel-body">
      <div class="form" style="color:darkgrey">
      <%= form_for student do |f| %>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
        <br><br>
        <%= f.label :heritage %><br>
        <%= f.select :heritage, Student.heritages, include_blank: true %>
        <br><br>
        <%= f.label :patronus, "Patronus, if known" %><br>
        <%= f.text_field :patronus %>
        <br><br>
        <%= f.label :graduation_year, "Class of" %><br>
        <%= f.text_field :graduation_year %>
        <br><br>
        <%= f.check_box :status %>
        <%= f.label :status, "Alive at End of Book Series?" %>
        <br><br>
        <%= f.label :bio %><br>
        <%= f.text_area :bio %>
        <br><br><br>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
