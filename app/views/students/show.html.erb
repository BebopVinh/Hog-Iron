<div class="col-sm-7"></div>
<div class="col-sm-5 d-flex flex-row">
    <% if flash[:notice] %>
     <div class="notice">
       <font size="60" color="purple"><%= flash[:notice] %></font></div>
   <% end %>
 </div>


<%= render partial: 'student', locals: { s: @student, house: @house }%>


<div class="col-sm-7"></div>
<div class="col-sm-5 d-flex flex-row">
  <%= button_to "Add or Drop Classes",  "#{student_path(@student)}/classes", method: :get%>
  <%= button_to "Edit Student",  edit_student_path(@student), method: :get%>
  <%= button_to "Delete Student",  student_path(@student), method: :delete%>
</div>
