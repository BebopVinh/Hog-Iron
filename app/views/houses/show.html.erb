<div class="center" style="text-align:center">
  <br><br>br
  <div class="subheader"><h2><%= @house.name %></h2></div>
  <div class="house_show">
  <h3><%= @house.description%></h3><br>

  <h2>Head of House: <%= link_to @head_of_house_name, teacher_path(@head_of_house)%></h2><br>

