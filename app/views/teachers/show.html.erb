<%= render 'layout' %>


<div class="col-sm-12 d-flex flex-row">
  <br><br>
  <div class="container">
    <div class="panel-a" text-black>
      <div class="panel-body">

      <div style="text-align:center">
        <div class="container-fluid row">
          <div class="subheader"><h2>About <%= @teacher.name %></h2></div>

          <div class="bio">
             <h3>Biography</h3>
             <h4><%= @teacher.bio %></h4>
          </div>

          <div class="classes">
             <h3>
               Classes<br>
                <% @klasses.each do |klass| %>
                  <%= link_to klass.name, klass_path(klass) %>
                <% end %>
             </h3>
          </div>
        </div>

        <br><br>
        <h4><%= link_to "Back To Our Teachers", teachers_path %></h4>
      </div>

    </div>
  </div>
</div>
