<div class="subheader"><h2>Login to Your Hogwarts Wizard Portal</h2></div>
<br>

<div class="form">
<%= form_tag(login_path, method: :post) do %>
  <p><%= label_tag(:username) %>
  <%= text_field_tag(:username) %></p>
  <br>

  <p><%= label_tag(:password) %>
  <%= password_field_tag(:password) %></p>
  <br>
  <%= submit_tag "Login"%>

<% end %>
</div>
